<view class="message-box">
  <view class="header">
    <image class="avatar" src="{{ avatar }}"></image>
    <view>
      <text>{{ nick }}</text>
      <button 
        bindtap="handleLike" 
        data-_id="{{ item._id }}"
        data-type="like"
        class="btn-no-border">
        <i-icon type="praise" />
        <text class="comment-count">({{ item.like }})</text>
      </button>
    </view>
  </view>
</view>
